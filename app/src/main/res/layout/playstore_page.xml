<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_top_screen"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#079527" />
    <View
        android:id="@+id/view_square"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="40dp"
        android:background="#079527" />
    <View
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="50dp"
        android:background="#C4C4C4" />
    <View
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="85dp"
        android:background="#C4C4C4" />
    <View
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="115dp"
        android:background="#C4C4C4" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Try Now"
        android:textSize="16sp"
        android:layout_below="@+id/view_square"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Install"
        android:textSize="16sp"
        android:layout_below="@+id/view_square"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="220dp" />


</RelativeLayout>