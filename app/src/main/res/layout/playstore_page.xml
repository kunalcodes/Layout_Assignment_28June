<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top_screen"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#14AE24" />
    <View
        android:id="@+id/view_square"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="40dp"
        android:background="#14AE24" />
    <View
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="50dp"
        android:background="#C4C4C4" />
    <View
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="85dp"
        android:background="#C4C4C4" />
    <View
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view_top_screen"
        android:layout_marginTop="115dp"
        android:background="#C4C4C4" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Try Now"
        android:textSize="16sp"
        android:textColor="#14AE24"
        android:background="@drawable/btn_green_bg"
        android:layout_below="@+id/view_square"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Install"
        android:background="#14AE24"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/view_square"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="220dp" />
    <View
        android:id="@+id/viewmidcircle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_green"/>
    <View
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="30dp"
        android:layout_toStartOf="@+id/viewmidcircle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_green"/>
    <View
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="30dp"
        android:layout_toEndOf="@+id/viewmidcircle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_green"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/viewmidcircle"
        android:layout_marginTop="30dp"
        android:background="#C4C4C4" />
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="70dp"
        android:layout_below="@+id/viewmidcircle"
        android:layout_marginTop="100dp"
        android:background="#C4C4C4" />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_ant_design_arrow_left_outlined"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_search"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="18dp"
        android:layout_height="25dp"
        android:layout_below="@id/view_top_screen"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_tag"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/view_top_screen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_carbon_play_outline" />


</RelativeLayout>