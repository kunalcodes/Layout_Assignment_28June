<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0583EA"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_ant_design_arrow_left_outlined"
        android:drawablePadding="30dp"
        android:padding="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#444444"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="52dp"
        android:textSize="14sp" />
    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#444444"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="52dp"
        android:textSize="14sp" />
    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USE PHONE NUMBER"
        android:textColor="#0583EA"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textSize="13sp" />
    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#858992"
        android:textAllCaps="false"
        android:layout_marginTop="45dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#858992"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textSize="13sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@android:color/black"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:textSize="16dp" />
    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="#3B5998"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:drawableLeft="@drawable/ic_ion_logo_facebook"
        android:text="Continue with facebook"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:drawableLeft="@drawable/ic_flat_color_icons_google"
        android:text="Continue with google"
        android:layout_marginTop="30dp" />

</LinearLayout>
